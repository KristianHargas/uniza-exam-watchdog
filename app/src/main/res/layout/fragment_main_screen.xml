<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="mainViewModel"
            type="com.tinko.unizaexamwatchdog.viewmodel.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainScreenFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subjects_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingVertical="8dp"
            android:background="@color/secondaryColor"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/main_bottom_menu"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="@{mainViewModel.allSubjects.empty ? View.GONE : View.VISIBLE}"
            tools:itemCount="4"
            tools:listitem="@layout/subject_item" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/main_bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/main_bottom_menu"
            style="@style/Widget.MaterialComponents.BottomNavigationView.Colored"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ProgressBar
            android:id="@+id/main_loading_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="@{mainViewModel.allSubjects.empty ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@+id/main_bottom_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>